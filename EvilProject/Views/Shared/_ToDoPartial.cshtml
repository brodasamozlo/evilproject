@{
    System.Collections.Hashtable ToDo = ViewData["lista_todo_do_zrobienia"] as System.Collections.Hashtable;

    if (ToDo != null)
    {
       <ul>
		 <li>
            @foreach (string projekt in ToDo.Keys)
            {
                <h2>TODO - @projekt</h2>
                 
                <ul>
                     @foreach (EvilProject.Models.TODO zadanie in (System.Collections.ArrayList)ToDo[projekt])
                     { 
                        if(Request.IsAuthenticated)
                        {
                            <p>   
                            @Html.ActionLink("Edit", "Edit", "TODO", new { zadanie.Id }, new { @class = "editlinksmall" })
                            @Html.ActionLink("Delete", "Delete", "TODO", new { zadanie.Id }, new { @class = "deletelinksmall" })
                            </p>
                        }
                       <li>@String.Format("{0} - (dodane: {1})", zadanie.description, zadanie.add_date.ToString("yyyy-MM-dd"))</li>	
                     }
                </ul>
            }    
         </li>
       </ul>
           
    }
    else 
    {
        <ul>
			<li>
                <h2>TODO  - NIC</h2>
			    <ul>
                    <li>Wakacje ???? :)</li>	
			    </ul>
            </li>
        </ul>
        }
    }


