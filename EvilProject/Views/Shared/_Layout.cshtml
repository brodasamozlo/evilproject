<!DOCTYPE html>

<head>
<meta http-equiv="content-type" content="text/html; charset=utf-8" />
<title>@ViewBag.Title - Evil Project</title>
<meta name="keywords" content="" />
  @Styles.Render("~/Content/css")
  @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<div id="header">
	<div id="logo">
		<h1><a href="http://www.evilproject.pl"><span>Evil</span>Project</a></h1>
		<p>by Broda Samo Zło </p>
	</div>
</div>
    <div id="menu">
	
<ul id="main">
@Html.Partial("_MenuPartial")
    </ul>
        </div>
<div id="wrapper">
	<div id="page"><div class="inner_copy"></div>
		<div id="sidebar1" class="sidebar">
            @Html.Partial("_LeftSideBarPartial")
		</div>
		<div id="content">
           @RenderSection("featured", required: false)
           @RenderBody()
		</div>
		<div id="sidebar2" class="sidebar">
			@Html.Partial("_ToDoPartial")
		</div>
		<div style="clear:both">&nbsp;</div>
	</div>
</div>
<div id="footer">
    <div class="fcenter">
        <p>
            <a href="http://validator.w3.org/check/referer" title="This page validates as HTML 5" target="_blank">
            <abbr title="HTML validation">HTML</abbr></a> | 
            <a href="http://jigsaw.w3.org/css-validator/check/referer" title="This page validates as CSS" target="_blank">
            <abbr title="Cascading Style Sheets validation">CSS</abbr></a>
            <br>
            Design by:<a href="http://www.freecsstemplates.org/">Free CSS Templates</a>

        </p>

    </div>
    <div class="fright">@Html.Partial("_LoginPartial")</div>
    <div class="fclear"></div>

</div>
     @Scripts.Render("~/bundles/jquery")
     @RenderSection("scripts", required: false)
</body>
</html>