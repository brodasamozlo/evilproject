@model IEnumerable<EvilProject.Models.PageNews>

@{
    ViewBag.Title = "Lista Newsów";
}

<div class="post">
	<h1 class="title"><a href="#">Lista Newsów</a></h1>
	<p class="byline"><small>  @Html.ActionLink("Dodaj nowy", "Create", null ,  new { @class = "addlinksmall" })</small></p>
	<div class="entry">


  

<table>
    <tr>
        <th>
           Tytuł
        </th>
        <th>
           Data publikacji
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            @String.Format("{0}", item.publish_date).Substring(0,16)
        </td>
         <td>
            @Html.ActionLink("Edit", "Edit",new { id=item.id },new { @class="editlinksmall" }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.id },new { @class="deletelinksmall" })
        </td>
    </tr>
}

</table>
        </div></div>
